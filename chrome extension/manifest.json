{
  "manifest_version": 2,

  "name": "NEM DNS",
  "description": "This extension automatically adds NEM DNS blockchain browser support ",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Damn! Take me to the library!"
  },
  
  "background":{
    "scripts":["background.js"]
  },

  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*",
    "tabs",
    "alarms",
    "notifications",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}